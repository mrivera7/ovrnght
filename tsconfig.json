{
    "compilerOptions": {
        "baseUrl": ".",
        "paths": {
            "@calc/*": [
                "packages/calculator/build/*"
            ]
        },
        "outDir": "./dist",
        "target": "es6",
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "declaration": true,
        "importHelpers": true,
        "module": "commonjs",
        "moduleResolution": "node",
        "noImplicitAny": true,
        "removeComments": true,
        "strict": true,
        "types": [
          "node"
        ]
    },
    "include": [
        "src",
        "packages/calculator/build"
    ],
    "exclude": [
        "node_modules",
        "packages/client"
    ]
}